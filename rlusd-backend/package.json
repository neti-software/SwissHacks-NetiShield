{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "prisma:generate": "prisma generate",
    "prisma:seed": "prisma db seed",
    "prisma:seed:ci": "node dist/prisma/seed.js",
    "prisma:migrate:create": "prisma migrate dev --create-only --name",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:migrate:dev": "prisma migrate dev && npm run prisma:generate && npm run prisma:seed",
    "prisma:reset:warning": "node -e \"require('dotenv').config(); console.log(process.env.DATABASE_URL); console.log('\\nBe careful database will reset in 5 seconds');\" && sleep 7",
    "prisma:reset": "npm run prisma:reset:warning && prisma migrate reset -f "
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@nestjs/cli": "^11.0.5",
    "@nestjs/common": "^11.0.12",
    "@nestjs/config": "^4.0.1",
    "@nestjs/core": "^11.0.12",
    "@nestjs/platform-express": "^11.0.12",
    "@nestjs/platform-socket.io": "^11.0.12",
    "@nestjs/swagger": "^11.1.0",
    "@nestjs/websockets": "^11.0.12",
    "@prisma/client": "^6.5.0",
    "@types/express-session": "^1.18.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "envalid": "^8.0.0",
    "express-session": "^1.18.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "socket.io": "^4.8.1",
    "uuid": "^11.1.0",
    "xrpl": "^4.2.0",
    "xumm-sdk": "^1.11.2"
  },
  "description": "",
  "devDependencies": {
    "@nestjs/testing": "^11.0.12",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.14",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "prisma": "^6.5.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.3.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.2"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "moduleNameMapper": {
    "^@infra/(.*)$": "<rootDir>/infra/$1",
    "^@entities/(.*)$": "<rootDir>/infra/prisma/entities/$1",
    "^@auth/(.*)$": "<rootDir>/auth/$1",
    "^@common/(.*)$": "<rootDir>/common/$1",
    "^@users/(.*)$": "<rootDir>/core/users/$1"
  }
}
